{
  "openapi": "3.0.0",
  "info": {
    "title": "사용자 인증 API",
    "version": "1.0.0",
    "description": "사용자 회원가입, 로그인, 이메일 인증, 사용자 정보 조회 기능을 포함한 API"
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/auth/signup": {
      "post": {
        "summary": "사용자 회원가입",
        "description": "이메일을 통해 사용자 회원가입을 처리합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "회원가입을 위해 이메일 인증을 완료하세요. 이메일을 확인해주세요.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SignupResponse"
                }
              }
            }
          },
          "400": {
            "description": "회원가입 실패 또는 이미 존재하는 이메일"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "summary": "사용자 로그인",
        "description": "이메일과 비밀번호를 통해 로그인 처리를 합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "이메일 또는 비밀번호가 잘못됨"
          },
          "403": {
            "description": "이메일 인증이 완료되지 않음"
          }
        }
      }
    },
    "/api/auth/verify": {
      "post": {
        "summary": "이메일 인증",
        "description": "이메일 인증을 통해 회원가입을 완료합니다.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VerifyRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "이메일 인증 및 회원가입 완료",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VerifyResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못되었거나 만료된 토큰"
          }
        }
      }
    },
    "/api/auth/user": {
      "get": {
        "summary": "사용자 정보 조회",
        "description": "JWT 토큰을 통해 인증된 사용자의 정보를 조회합니다.",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Bearer {token}"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 정보 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserResponse"
                }
              }
            }
          },
          "401": {
            "description": "인증 실패"
          },
          "404": {
            "description": "사용자 정보 찾을 수 없음"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SignupRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "name": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "name", "password"]
      },
      "SignupResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" }
        }
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": { "type": "string" },
          "password": { "type": "string" }
        },
        "required": ["email", "password"]
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "token": { "type": "string" }
        }
      },
      "VerifyRequest": {
        "type": "object",
        "properties": {
          "token": { "type": "string" }
        },
        "required": ["token"]
      },
      "VerifyResponse": {
        "type": "object",
        "properties": {
          "message": { "type": "string" },
          "user": { "$ref": "#/components/schemas/User" }
        }
      },
      "UserResponse": {
        "type": "object",
        "properties": {
          "user": { "$ref": "#/components/schemas/User" }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "email": { "type": "string" }
        }
      }
    }
  }
}
